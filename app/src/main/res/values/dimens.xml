<resources>
    <!-- Define standard dimensions to comply with Holo-style grids and rhythm. -->
    <dimen name="margin_tiny">4dp</dimen>
    <dimen name="margin_small">8dp</dimen>
    <dimen name="margin_medium">16dp</dimen>
    <dimen name="margin_large">32dp</dimen>
    <dimen name="margin_huge">64dp</dimen>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">@dimen/margin_medium</dimen>
    <dimen name="activity_vertical_margin">@dimen/margin_medium</dimen>
    <dimen name="app_bar_height">166dp</dimen>
    <!--  https://www.google.com/design/spec/layout/structure.html#structure-app-bar -->
    <dimen name="toolbar_height">56dp</dimen>
    <dimen name="fab_margin">@dimen/margin_medium</dimen>
    <dimen name="text_margin">@dimen/margin_medium</dimen>
    <!-- https://www.google.com/design/spec/what-is-material/elevation-shadows.html#elevation-shadows-elevation-android- -->
    <dimen name="appbar_elevation">4dp</dimen>
    <dimen name="card_elevation">2dp</dimen>
    <dimen name="fab_elevation">6dp</dimen>

