    <dimen name="gridbase_horizontal_margin">8dp</dimen>
    <dimen name="gridbase_vertical_margin">8dp</dimen>
    <dimen name="gridbase_item_icon_right_margin">32dp</dimen>
    <dimen name="gridbase_item_height">48dp</dimen>

