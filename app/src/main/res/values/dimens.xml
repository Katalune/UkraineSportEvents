    <dimen name="profile_firstline_margin_top">36dp</dimen>
    <dimen name="profile_text_size">18sp</dimen>
    <dimen name="profile_vertical_padding">16dp</dimen>
    <dimen name="profile_horizontal_padding">16dp</dimen>
    <dimen name="profile_horizontal_margin">0dp</dimen>
    <dimen name="profile_vertical_margin">0dp</dimen>

